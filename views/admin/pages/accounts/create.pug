extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    if(role.permissions.includes("accounts_create"))
        h1(class="mb-4") Thêm mới tài khoản

        +alert-error(3000)

        form(
            action=`${prefixAdmin}/accounts/create`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                lable(for="fullname") Họ tên *
                input(
                    type="text"
                    class="form-control"
                    id="fullname"
                    name="fullname"
                    required
                )
            div(class="form-group")
                lable(for="email") Email *
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                )

            div(class="form-group")
                lable(for="password") Mật khẩu *
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    required
                )
            
            div(class="form-group")
                lable(for="phone") Số điện thoại
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                )
            div(class="form-group"
                upload-image
            )
                lable(for="avatar") Avatar
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                img(src=""
                    class="image-review"
                    upload-image-revieww
                )
            div(class="form-group")
                lable(for="role_id") Phân quyền 
                select(name="role_id" id ="role_id" class="form-control")
                    option(disabled) -- Chọn --
                    each item in records 
                        option(value=item.id) #{item.title} 
                    
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked
                )
                label(for="statusActive" class="form-check-label") Hoạt động
            
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInactive"
                    name="status"
                    value="inactive"
                )
                label(for="statusActive" class="form-check-label") Dừng hoạt động
            div(class="form-group")
                button(type="submit" class="btn btn-primary") Tạo mới