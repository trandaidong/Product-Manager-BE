extends ../../layouts/default.pug

block main 

    if(product.title)
        h1(class="mb-4") #{product.title}
    
    if(product.thumbnail)
        div(class="mb-4")
            img(
                src=product.thumbnail 
                style="width: 100px"
            )

    if(product.status)
        div(class="mb-4")
            span Trạng thái: 
            if(product.status=="active")
                span(class="badge badge-success") Hoạt động
            else 
                span(class="badge badge-danger") Dừng hoạt động

    if(product.description)
        div(class="mb-4") !{product.description}
    a(
        href=`${prefixAdmin}/products-category/update/${product.id}`
        class="btn btn-warning btn-sm") Chỉnh sửa
    
    script(src="admin/js/product.js")