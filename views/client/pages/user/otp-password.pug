extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    +alert-success(3000)
    +alert-error(3000)

    .container.my-5 
        .row.justify-content-center
            .col-8
                h1(class="text-center") Nhập mã OTP xác thực
                form(
                    action="/user/password/otp"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            readonly
                            value=email
                        ) 
                    div(class="form-group")
                        label(for="otp") Mã OTP
                        input(
                            type="Number"
                            class="form-control"
                            id="otp"
                            name="otp"
                            required
                        ) 
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Xác nhận