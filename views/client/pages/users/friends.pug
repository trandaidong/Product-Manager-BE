extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    +alert-success(3000)
    +alert-error(3000)

    .container.my-3 
        include ../../partials/list-btn-users.pug

        .row 
            .col-12 
                +box-head(pageTitle)
        

        .row(data-user-friend)
            each user in users
                .col-3(user-id=user.id)
                    div(class="box-users")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar? user.avatar: "/images/avatar.jpg")
                                alt=user.fullname
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullname}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                ) Nháº¯n tin
                        div(
                            class="inner-status"
                            status=user.statusOnline
                        ) <i class="fa-solid fa-circle"></i>

block script 
    script(type="module",src="/js/users.js")
